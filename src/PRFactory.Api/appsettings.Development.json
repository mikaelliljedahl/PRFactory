{
  "Logging": {
    "LogLevel": {
      "Default": "Debug",
      "Microsoft": "Information",
      "Microsoft.Hosting.Lifetime": "Information",
      "Microsoft.AspNetCore": "Warning",
      "System": "Information",
      "PRFactory": "Debug"
    }
  },
  "ConnectionStrings": {
    "Database": "Data Source=prfactory.db"
  },
  "Jira": {
    "BaseUrl": "https://your-domain.atlassian.net",
    "ApiToken": "your-jira-api-token-here",
    "WebhookSecret": "your-webhook-secret-here",
    "UserEmail": "your-jira-email@example.com"
  },
  "Claude": {
    "ApiKey": "your-anthropic-api-key-here",
    "Model": "claude-sonnet-4-5-20250929",
    "MaxTokens": 8000,
    "Temperature": 0.7
  },
  "Workspace": {
    "BasePath": "./workspace",
    "CheckpointPath": "./workspace/checkpoints",
    "RepositoryPath": "./workspace/repositories"
  },
  "Git": {
    "GitHub": {
      "Token": "your-github-token-here",
      "BaseUrl": "https://api.github.com"
    },
    "Bitbucket": {
      "Token": "your-bitbucket-token-here",
      "BaseUrl": "https://api.bitbucket.org/2.0"
    },
    "AzureDevOps": {
      "Token": "your-azure-devops-token-here",
      "Organization": "your-organization",
      "BaseUrl": "https://dev.azure.com"
    }
  },
  "OpenTelemetry": {
    "ServiceName": "PRFactory.Api",
    "JaegerEndpoint": "http://localhost:6831"
  },
  "AgentFramework": {
    "MaxConcurrentWorkflows": 2,
    "WorkflowTimeoutMinutes": 30,
    "CheckpointIntervalSeconds": 10
  },
  "Features": {
    "EnableAutoImplementation": true,
    "EnableParallelAnalysis": true,
    "EnableStaticAnalysis": true,
    "MaxQuestionsPerTicket": 5
  }
}
