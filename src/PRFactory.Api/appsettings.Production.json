{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information",
      "Microsoft.AspNetCore": "Warning",
      "System": "Warning"
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "Database": "Data Source=/var/prfactory/data/prfactory.db"
  },
  "Jira": {
    "BaseUrl": "",
    "ApiToken": "${JIRA_API_TOKEN}",
    "WebhookSecret": "${JIRA_WEBHOOK_SECRET}",
    "UserEmail": "${JIRA_USER_EMAIL}"
  },
  "Claude": {
    "ApiKey": "${CLAUDE_API_KEY}",
    "Model": "claude-sonnet-4-5-20250929",
    "MaxTokens": 8000,
    "Temperature": 0.7
  },
  "Workspace": {
    "BasePath": "/var/prfactory/workspace",
    "CheckpointPath": "/var/prfactory/workspace/checkpoints",
    "RepositoryPath": "/var/prfactory/workspace/repositories"
  },
  "Git": {
    "GitHub": {
      "Token": "${GITHUB_TOKEN}",
      "BaseUrl": "https://api.github.com"
    },
    "Bitbucket": {
      "Token": "${BITBUCKET_TOKEN}",
      "BaseUrl": "https://api.bitbucket.org/2.0"
    },
    "AzureDevOps": {
      "Token": "${AZURE_DEVOPS_TOKEN}",
      "Organization": "${AZURE_DEVOPS_ORG}",
      "BaseUrl": "https://dev.azure.com"
    }
  },
  "OpenTelemetry": {
    "ServiceName": "PRFactory.Api",
    "JaegerEndpoint": "${JAEGER_ENDPOINT:http://jaeger:6831}"
  },
  "AgentFramework": {
    "MaxConcurrentWorkflows": 10,
    "WorkflowTimeoutMinutes": 120,
    "CheckpointIntervalSeconds": 60
  },
  "Features": {
    "EnableAutoImplementation": false,
    "EnableParallelAnalysis": true,
    "EnableStaticAnalysis": true,
    "MaxQuestionsPerTicket": 10
  }
}
