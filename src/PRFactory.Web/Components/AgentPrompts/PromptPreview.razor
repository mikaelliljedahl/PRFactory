@using PRFactory.Web.Models

<div class="prompt-preview-container">
    <RadzenSplitter Orientation="Orientation.Vertical" style="height: 600px;">
        <RadzenSplitterPane Size="50%">
            <div class="p-3">
                <h5 class="mb-3">
                    <i class="bi bi-file-earmark-text"></i> Template
                    @if (!string.IsNullOrEmpty(Template?.Name))
                    {
                        <span class="text-muted small">(@Template.Name)</span>
                    }
                </h5>
                <div class="code-block">
                    <pre><code>@TemplateContent</code></pre>
                </div>
            </div>
        </RadzenSplitterPane>
        <RadzenSplitterPane Size="50%">
            <div class="p-3">
                <h5 class="mb-3">
                    <i class="bi bi-eye"></i> Preview with Sample Data
                </h5>
                <div class="code-block preview-content">
                    <pre><code>@PreviewContent</code></pre>
                </div>
            </div>
        </RadzenSplitterPane>
    </RadzenSplitter>
</div>
