<div class="top-row ps-3 navbar navbar-dark">
    <div class="container-fluid">
        <a class="navbar-brand" href="">
            <i class="bi bi-robot"></i> PRFactory
            @if (IsDemoMode)
            {
                <span class="badge bg-warning text-dark ms-2">Demo</span>
            }
        </a>
        <button title="Navigation menu" class="navbar-toggler" @onclick="ToggleNavMenu">
            <span class="navbar-toggler-icon"></span>
        </button>
    </div>
</div>

<div class="@NavMenuCssClass nav-scrollable" @onclick="ToggleNavMenu">
    <nav class="flex-column">
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                <i class="bi bi-speedometer2"></i> Dashboard
            </NavLink>
        </div>
        @if (ShouldShowGettingStarted)
        {
            <div class="nav-item px-3">
                <NavLink class="nav-link" href="getting-started">
                    <i class="bi bi-rocket-takeoff"></i> Getting Started
                    <span class="badge bg-success ms-2">New</span>
                </NavLink>
            </div>
        }
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="tickets">
                <i class="bi bi-ticket-detailed"></i> Tickets
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="repositories">
                <i class="bi bi-folder"></i> Repositories
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="workflows">
                <i class="bi bi-diagram-3"></i> Workflows
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="workflows/events">
                <i class="bi bi-calendar-event"></i> Event Log
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="errors">
                <i class="bi bi-exclamation-triangle"></i> Errors
                @if (UnresolvedErrorCount > 0)
                {
                    <span class="badge bg-danger ms-2">@UnresolvedErrorCount</span>
                }
            </NavLink>
        </div>

        <hr class="my-2 text-white-50" />

        <div class="nav-item px-3">
            <small class="text-white-50 px-3">ADMIN</small>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="tenants">
                <i class="bi bi-building"></i> Tenants
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="agent-prompts">
                <i class="bi bi-robot"></i> Agent Prompts
            </NavLink>
        </div>
    </nav>
</div>

