@using PRFactory.Web.UI.Buttons
@using PRFactory.Web.UI.Alerts
@using PRFactory.Web.UI.Cards
@using PRFactory.Web.Models

<Card Title="Test Connection" Icon="wifi" AdditionalClass="mb-4">
    <ChildContent>
        <p class="text-muted">
            Test the connection to your repository before saving. This will verify your credentials and fetch available branches.
        </p>

        <LoadingButton IsLoading="@IsTesting"
                      Icon="play-circle"
                      OnClick="@HandleTestConnection"
                      Disabled="@(!CanTest)">
            Test Connection
        </LoadingButton>

        @if (TestResult != null)
        {
            <div class="mt-3">
                @if (TestResult.Success)
                {
                    <AlertMessage Type="AlertType.Success"
                                 Title="Success"
                                 Message="@TestResult.Message"
                                 Icon="check-circle-fill" />

                    @if (TestResult.AvailableBranches.Any())
                    {
                        <div class="mt-3">
                            <h6>Available Branches:</h6>
                            <div class="d-flex flex-wrap gap-2">
                                @foreach (var branch in TestResult.AvailableBranches.Take(10))
                                {
                                    <span class="badge bg-info">@branch</span>
                                }
                                @if (TestResult.AvailableBranches.Count > 10)
                                {
                                    <span class="badge bg-secondary">+@(TestResult.AvailableBranches.Count - 10) more</span>
                                }
                            </div>
                        </div>
                    }
                }
                else
                {
                    <AlertMessage Type="AlertType.Danger"
                                 Title="Connection Failed"
                                 Message="@TestResult.Message"
                                 Icon="exclamation-triangle-fill" />

                    @if (!string.IsNullOrEmpty(TestResult.ErrorDetails) && ShowErrorDetails)
                    {
                        <div class="mt-2">
                            <button class="btn btn-sm btn-link text-danger p-0" @onclick="ToggleErrorDetails">
                                <i class="bi bi-chevron-down me-1"></i>Show Error Details
                            </button>
                            @if (showErrorDetails)
                            {
                                <pre class="bg-light p-3 mt-2 small text-danger">@TestResult.ErrorDetails</pre>
                            }
                        </div>
                    }
                }

                <div class="mt-2">
                    <small class="text-muted">
                        Tested at @TestResult.TestedAt.ToLocalTime().ToString("g")
                    </small>
                </div>
            </div>
        }
    </ChildContent>
</Card>
