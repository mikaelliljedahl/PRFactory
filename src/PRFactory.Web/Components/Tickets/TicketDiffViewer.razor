@using PRFactory.Web.Models

<div class="ticket-diff-viewer">
    <div class="row">
        <!-- Original Ticket -->
        <div class="col-md-6">
            <div class="diff-panel original-panel">
                <div class="diff-header">
                    <h5><i class="bi bi-file-earmark"></i> Original Ticket</h5>
                </div>
                <div class="diff-content">
                    <div class="mb-3">
                        <label class="text-muted">Title</label>
                        <div class="content-box">
                            @OriginalTicket.Title
                        </div>
                    </div>

                    <div class="mb-3">
                        <label class="text-muted">Description</label>
                        <div class="content-box markdown-content">
                            @((MarkupString)RenderMarkdown(OriginalTicket.Description))
                        </div>
                    </div>

                    <div class="mb-3">
                        <label class="text-muted">Success Criteria</label>
                        <div class="content-box">
                            <em class="text-muted">Not defined in original ticket</em>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label class="text-muted">Acceptance Criteria</label>
                        <div class="content-box">
                            <em class="text-muted">Not defined in original ticket</em>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Updated Ticket -->
        <div class="col-md-6">
            <div class="diff-panel updated-panel">
                <div class="diff-header">
                    <h5><i class="bi bi-file-earmark-check"></i> Updated Ticket</h5>
                </div>
                <div class="diff-content">
                    <div class="mb-3">
                        <label class="text-muted">Title</label>
                        <div class="content-box @(HasTitleChanged() ? "changed" : "")">
                            @TicketUpdate.UpdatedTitle
                            @if (HasTitleChanged())
                            {
                                <span class="badge bg-warning text-dark ms-2">Changed</span>
                            }
                        </div>
                    </div>

                    <div class="mb-3">
                        <label class="text-muted">Description</label>
                        <div class="content-box markdown-content @(HasDescriptionChanged() ? "changed" : "")">
                            @((MarkupString)RenderMarkdown(TicketUpdate.UpdatedDescription))
                            @if (HasDescriptionChanged())
                            {
                                <span class="badge bg-warning text-dark ms-2">Changed</span>
                            }
                        </div>
                    </div>

                    <div class="mb-3">
                        <label class="text-muted">Success Criteria</label>
                        <div class="content-box changed">
                            @if (TicketUpdate.SuccessCriteria != null && TicketUpdate.SuccessCriteria.Any())
                            {
                                <span class="badge bg-success text-white mb-2">Added</span>
                                @foreach (var criterion in TicketUpdate.SuccessCriteria.OrderBy(sc => sc.Priority))
                                {
                                    <div class="criterion-item mb-2">
                                        <span class="@criterion.PriorityBadgeClass me-1">@criterion.PriorityLabel</span>
                                        <span class="badge bg-secondary me-1">@criterion.CategoryDisplay</span>
                                        @if (criterion.IsTestable)
                                        {
                                            <span class="badge bg-info me-1">Testable</span>
                                        }
                                        <div class="mt-1">@criterion.Description</div>
                                    </div>
                                }
                            }
                            else
                            {
                                <em class="text-muted">No success criteria</em>
                            }
                        </div>
                    </div>

                    <div class="mb-3">
                        <label class="text-muted">Acceptance Criteria</label>
                        <div class="content-box markdown-content changed">
                            <span class="badge bg-success text-white mb-2">Added</span>
                            @((MarkupString)RenderMarkdown(TicketUpdate.AcceptanceCriteria))
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
