@using PRFactory.Web.Models
@using PRFactory.Domain.ValueObjects

<div class="card">
    <div class="card-header">
        <h5 class="mb-0">
            <i class="bi bi-clock-history"></i> Workflow Timeline
        </h5>
    </div>
    <div class="card-body">
        @if (Events == null || !Events.Any())
        {
            <div class="timeline">
                <!-- Show current state as the only timeline item if no events -->
                <div class="timeline-item">
                    <div class="timeline-marker @GetStateMarkerClass(Ticket.State)">
                        <i class="@GetStateIcon(Ticket.State)"></i>
                    </div>
                    <div class="timeline-content">
                        <div class="timeline-title">@Ticket.StateDisplay</div>
                        <div class="timeline-time">@FormatTimestamp(Ticket.CreatedAt)</div>
                    </div>
                </div>
            </div>
        }
        else
        {
            <div class="timeline">
                @foreach (var evt in Events.OrderByDescending(e => e.OccurredAt))
                {
                    <div class="timeline-item">
                        <div class="timeline-marker @GetEventMarkerClass(evt)">
                            <i class="@GetEventIcon(evt)"></i>
                        </div>
                        <div class="timeline-content">
                            <div class="timeline-title">@evt.Description</div>
                            <div class="timeline-time">@FormatTimestamp(evt.OccurredAt)</div>

                            @if (evt.EventType == "WorkflowStateChanged")
                            {
                                @if (evt.FromState.HasValue && evt.ToState.HasValue)
                                {
                                    <div class="timeline-details">
                                        <span class="badge bg-secondary">@GetStateDisplay(evt.FromState.Value)</span>
                                        <i class="bi bi-arrow-right mx-2"></i>
                                        <span class="badge @GetStateBadgeClass(evt.ToState.Value)">@GetStateDisplay(evt.ToState.Value)</span>
                                    </div>
                                }

                                @if (!string.IsNullOrEmpty(evt.Reason))
                                {
                                    <div class="timeline-reason">
                                        <small class="text-muted">@evt.Reason</small>
                                    </div>
                                }
                            }
                        </div>
                    </div>
                }
            </div>
        }
    </div>
</div>

<style>
    .timeline {
        position: relative;
        padding-left: 0;
    }

    .timeline-item {
        position: relative;
        padding-bottom: 1.5rem;
        padding-left: 3rem;
        border-left: 2px solid #dee2e6;
        margin-left: 1rem;
    }

    .timeline-item:last-child {
        border-left: 2px solid transparent;
    }

    .timeline-marker {
        position: absolute;
        left: -1.125rem;
        width: 2.25rem;
        height: 2.25rem;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        color: white;
        font-size: 1rem;
    }

    .timeline-marker-success {
        background-color: #198754;
    }

    .timeline-marker-danger {
        background-color: #dc3545;
    }

    .timeline-marker-warning {
        background-color: #ffc107;
        color: #000;
    }

    .timeline-marker-info {
        background-color: #0dcaf0;
        color: #000;
    }

    .timeline-marker-secondary {
        background-color: #6c757d;
    }

    .timeline-content {
        padding-top: 0.25rem;
    }

    .timeline-title {
        font-weight: 600;
        margin-bottom: 0.25rem;
        color: #212529;
    }

    .timeline-time {
        font-size: 0.875rem;
        color: #6c757d;
        margin-bottom: 0.5rem;
    }

    .timeline-details {
        margin-top: 0.5rem;
        display: flex;
        align-items: center;
    }

    .timeline-reason {
        margin-top: 0.5rem;
        padding: 0.5rem;
        background-color: #f8f9fa;
        border-radius: 0.25rem;
    }
</style>
