@page "/agent-prompts/preview/{Id:guid}"
@using PRFactory.Web.Components.AgentPrompts
@using PRFactory.Web.Models
@using PRFactory.Web.UI.Display
@using PRFactory.Web.UI.Alerts

<PageTitle>Preview Agent Prompt Template</PageTitle>

<div class="container-fluid">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/agent-prompts">Agent Prompts</a></li>
            <li class="breadcrumb-item active" aria-current="page">Preview</li>
        </ol>
    </nav>

    @if (IsLoading)
    {
        <LoadingSpinner Message="Loading template..." />
    }
    else if (Template == null)
    {
        <EmptyState
            Icon="exclamation-triangle"
            Title="Template Not Found"
            Message="The requested template could not be found."
            ActionText="Back to Templates"
            ActionUrl="/agent-prompts" />
    }
    else
    {
        <div class="d-flex justify-content-between align-items-center mb-4">
            <div>
                <h1>
                    <i class="bi bi-eye"></i> Preview: @Template.Name
                </h1>
                <p class="text-muted mb-0">@Template.Description</p>
            </div>
            <div class="d-flex gap-2">
                @if (!Template.IsSystemTemplate)
                {
                    <a href="/agent-prompts/edit/@Id" class="btn btn-primary">
                        <i class="bi bi-pencil"></i> Edit
                    </a>
                }
                else
                {
                    <button class="btn btn-info" @onclick="HandleClone">
                        <i class="bi bi-files"></i> Clone
                    </button>
                }
                <a href="/agent-prompts" class="btn btn-secondary">
                    <i class="bi bi-arrow-left"></i> Back
                </a>
            </div>
        </div>

        @if (!string.IsNullOrEmpty(ErrorMessage))
        {
            <AlertMessage Message="@ErrorMessage" Type="AlertType.Danger" />
        }

        <div class="row mb-3">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-body">
                        <div class="d-flex gap-2 flex-wrap">
                            <span class="@Template.CategoryBadgeClass">
                                @Template.Category
                            </span>
                            <span class="@Template.TypeBadgeClass">
                                @Template.TypeDisplay
                            </span>
                            @if (!string.IsNullOrEmpty(Template.RecommendedModel))
                            {
                                <span class="badge bg-secondary">
                                    <i class="bi bi-cpu"></i> @Template.RecommendedModel
                                </span>
                            }
                            @if (!string.IsNullOrEmpty(Template.Color))
                            {
                                <span class="badge" style="background-color: @Template.Color">
                                    <i class="bi bi-palette"></i> Custom Color
                                </span>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="card">
            <div class="card-header bg-primary text-white">
                <div class="d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">
                        <i class="bi bi-code-square"></i> Template Preview
                    </h5>
                    <div class="form-check form-switch">
                        <input class="form-check-input" type="checkbox" id="useSampleData"
                               @bind="UseSampleData" @bind:after="OnSampleDataToggled">
                        <label class="form-check-label" for="useSampleData">
                            Use Sample Data
                        </label>
                    </div>
                </div>
            </div>
            <div class="card-body p-0">
                <PromptPreview
                    Template="@Template"
                    SampleData="@(UseSampleData ? null : new Dictionary<string, string>())" />
            </div>
        </div>

        <div class="row mt-3">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <h6 class="mb-0">
                            <i class="bi bi-info-circle"></i> Template Metadata
                        </h6>
                    </div>
                    <div class="card-body">
                        <dl class="row mb-0">
                            <dt class="col-sm-2">Template ID:</dt>
                            <dd class="col-sm-10"><code>@Template.Id</code></dd>

                            <dt class="col-sm-2">Created:</dt>
                            <dd class="col-sm-10">@Template.CreatedAt.ToString("F")</dd>

                            @if (Template.UpdatedAt.HasValue)
                            {
                                <dt class="col-sm-2">Last Updated:</dt>
                                <dd class="col-sm-10">@Template.UpdatedAt.Value.ToString("F")</dd>
                            }

                            @if (Template.TenantId.HasValue)
                            {
                                <dt class="col-sm-2">Tenant ID:</dt>
                                <dd class="col-sm-10"><code>@Template.TenantId.Value</code></dd>
                            }
                        </dl>
                    </div>
                </div>
            </div>
        </div>
    }
</div>
