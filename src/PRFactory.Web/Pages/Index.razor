@page "/"
@using PRFactory.Web.UI.Cards
@using PRFactory.Web.UI.Display
@using PRFactory.Web.UI.Alerts

<PageTitle>PRFactory - Dashboard</PageTitle>

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col">
            <h1 class="display-4">
                <i class="bi bi-speedometer2"></i> PRFactory Dashboard
            </h1>
            <p class="lead">AI-powered pull request automation</p>
        </div>
    </div>

    <div class="row">
        <div class="col-md-12">
            <Card Title="Recent Tickets" Icon="ticket-detailed" Variant="CardVariant.Primary">
                @if (isLoading)
                {
                    <LoadingSpinner IsLoading="true" Message="Loading tickets..." />
                }
                else if (errorMessage != null)
                {
                    <AlertMessage Message="@errorMessage" Type="AlertType.Danger" Icon="exclamation-triangle" />
                }
                else if (tickets.Count == 0)
                {
                    <AlertMessage Message="No tickets found. Start by configuring your repositories." Type="AlertType.Info" Icon="info-circle" />
                }
                else
                {
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>Ticket</th>
                                    <th>Title</th>
                                    <th>Status</th>
                                    <th>Repository</th>
                                    <th>Created</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var ticket in tickets.Take(10))
                                {
                                    <tr>
                                        <td><code>@ticket.ExternalTicketKey</code></td>
                                        <td>@ticket.Title</td>
                                        <td>
                                            <StatusBadge State="@ticket.State" />
                                        </td>
                                        <td>@ticket.Repository?.Name</td>
                                        <td>@ticket.CreatedAt.ToString("g")</td>
                                        <td>
                                            <button class="btn btn-sm btn-outline-primary"
                                                    @onclick="() => ViewTicket(ticket.Id)">
                                                <i class="bi bi-eye"></i> View
                                            </button>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
            </Card>
        </div>
    </div>

    <div class="row mt-4">
        <div class="col-md-4">
            <Card AdditionalClass="border-primary">
                <div class="text-center">
                    <i class="bi bi-ticket-detailed display-4 text-primary"></i>
                    <h5 class="mt-3">Tickets</h5>
                    <p class="display-6">@tickets.Count</p>
                </div>
            </Card>
        </div>
        <div class="col-md-4">
            <Card AdditionalClass="border-success">
                <div class="text-center">
                    <i class="bi bi-check-circle display-4 text-success"></i>
                    <h5 class="mt-3">Completed</h5>
                    <p class="display-6">@tickets.Count(t => t.State == WorkflowState.Completed)</p>
                </div>
            </Card>
        </div>
        <div class="col-md-4">
            <Card AdditionalClass="border-warning">
                <div class="text-center">
                    <i class="bi bi-hourglass-split display-4 text-warning"></i>
                    <h5 class="mt-3">In Progress</h5>
                    <p class="display-6">@tickets.Count(t => t.State != WorkflowState.Completed && t.State != WorkflowState.Failed && t.State != WorkflowState.Cancelled)</p>
                </div>
            </Card>
        </div>
    </div>
</div>
