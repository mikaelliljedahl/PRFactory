@using PRFactory.Web.UI.Alerts

@if (IsVisible && ShowBanner)
{
    <div class="demo-mode-banner alert alert-info alert-dismissible fade show mb-0" role="alert">
        <div class="container-fluid">
            <i class="bi bi-info-circle me-2"></i>
            <strong>ðŸŽ­ Demo Mode:</strong> You're viewing sample data.
            @if (!string.IsNullOrEmpty(AdditionalMessage))
            {
                <text>@AdditionalMessage</text>
            }
            else
            {
                <text>This is not production data.</text>
            }
            <button type="button" class="btn-close" @onclick="DismissBanner" aria-label="Close"></button>
        </div>
    </div>
}

@code {
    [Parameter] public bool ShowBanner { get; set; }
    [Parameter] public string? AdditionalMessage { get; set; }

    private bool IsVisible { get; set; } = true;

    private void DismissBanner()
    {
        IsVisible = false;
    }
}
