{
  "ConnectionStrings": {
    "Database": "Data Source=/var/prfactory/data/prfactory.db;Cache=Shared"
  },

  "Authentication": {
    "Google": {
      "ClientId": "",
      "ClientSecret": ""
    },
    "Microsoft": {
      "ClientId": "",
      "ClientSecret": ""
    }
  },

  "Jira": {
    "BaseUrl": "https://your-company.atlassian.net",
    "ApiToken": "",
    "UserEmail": "",
    "WebhookSecret": ""
  },

  "Claude": {
    "ApiKey": "",
    "Model": "claude-sonnet-4-5-20250929",
    "MaxTokens": 8000,
    "Temperature": 0.7
  },

  "Git": {
    "GitHub": {
      "Token": "",
      "BaseUrl": "https://api.github.com"
    },
    "Bitbucket": {
      "Token": "",
      "BaseUrl": "https://api.bitbucket.org/2.0"
    },
    "AzureDevOps": {
      "Token": "",
      "Organization": "",
      "BaseUrl": "https://dev.azure.com"
    },
    "WorkingDirectory": "./git-repos",
    "CleanupOldReposAfterDays": 7
  },

  "Workspace": {
    "BasePath": "/var/prfactory/workspace",
    "CheckpointPath": "/var/prfactory/workspace/checkpoints",
    "RepositoryPath": "/var/prfactory/workspace/repositories"
  },

  "AgentHost": {
    "MaxConcurrentExecutions": 10,
    "PollIntervalSeconds": 5,
    "BatchSize": 20,
    "MaxRetries": 3,
    "MaxResumeRetries": 5,
    "RetryDelayBaseSeconds": 30,
    "GracefulShutdownTimeoutSeconds": 300
  },

  "AgentFramework": {
    "Enabled": true,
    "DefaultTimeoutSeconds": 900,
    "MaxConcurrentExecutions": 10,
    "EnableCheckpoints": true,
    "CheckpointRetentionDays": 7,
    "Middleware": {
      "EnableLogging": true,
      "EnableTelemetry": false,
      "EnableErrorHandling": true,
      "EnableRetry": true
    },
    "Retry": {
      "MaxRetryAttempts": 3,
      "InitialDelayMs": 1000,
      "MaxDelayMs": 30000,
      "BackoffType": "Exponential",
      "UseJitter": true
    },
    "ErrorHandling": {
      "IncludeStackTrace": false,
      "SanitizeErrorMessages": true,
      "RethrowCancellation": true,
      "RethrowUnhandled": false
    }
  },

  "BackgroundTasks": {
    "CheckpointCleanup": {
      "Enabled": true,
      "CronSchedule": "0 2 * * *",
      "RetentionDays": 7
    },
    "RepositoryCleanup": {
      "Enabled": true,
      "CronSchedule": "0 3 * * *",
      "RetentionDays": 7
    },
    "MetricsCollection": {
      "Enabled": true,
      "IntervalSeconds": 60
    }
  },

  "ClaudeCodeCli": {
    "ExecutablePath": "claude",
    "DefaultTimeoutSeconds": 300,
    "ProjectContextTimeoutSeconds": 600,
    "StreamingTimeoutSeconds": 300,
    "EnableVerboseLogging": false
  },

  "LlmProviders": {
    "DefaultProvider": "anthropic",
    "FallbackProvider": "google",
    "FailoverEnabled": true,
    "Providers": {
      "anthropic": {
        "Enabled": true,
        "CliPath": "claude",
        "DefaultModel": "claude-sonnet-4-5-20250929",
        "TimeoutSeconds": 300,
        "MaxTokens": 8000
      },
      "google": {
        "Enabled": false,
        "CliPath": "gemini",
        "DefaultModel": "gemini-pro",
        "TimeoutSeconds": 300,
        "MaxTokens": 8000
      },
      "openai": {
        "Enabled": false,
        "CliPath": "openai",
        "DefaultModel": "gpt-4o",
        "TimeoutSeconds": 300,
        "MaxTokens": 4000
      }
    }
  },

  "Prompts": {
    "BasePath": "/prompts"
  },

  "Cors": {
    "AllowedOrigins": [
      "http://localhost:3000"
    ]
  },

  "Features": {
    "EnableAutoImplementation": false,
    "EnableStaticAnalysis": true
  },

  "Security": {
    "EncryptSecretsAtRest": true,
    "RequireWebhookSignatureValidation": true,
    "AllowedWebhookIPs": []
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.AspNetCore.SignalR": "Information",
      "Microsoft.AspNetCore.Http.Connections": "Information",
      "Microsoft.EntityFrameworkCore": "Warning",
      "Microsoft.Hosting.Lifetime": "Information",
      "System": "Warning",
      "System.Net.Http.HttpClient": "Warning"
    }
  },

  "Serilog": {
    "Using": ["Serilog.Sinks.Console", "Serilog.Sinks.File"],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.AspNetCore": "Warning",
        "Microsoft.EntityFrameworkCore": "Warning",
        "System": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "[{Timestamp:HH:mm:ss} {Level:u3}] {SourceContext}: {Message:lj}{NewLine}{Exception}"
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "logs/prfactory-.log",
          "rollingInterval": "Day",
          "retainedFileCountLimit": 30,
          "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} [{Level:u3}] {SourceContext}: {Message:lj}{NewLine}{Exception}"
        }
      }
    ],
    "Enrich": ["FromLogContext", "WithThreadId", "WithMachineName"]
  },

  "AllowedHosts": "*"
}
